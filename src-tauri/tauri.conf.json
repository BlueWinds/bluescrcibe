{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build && npm run prep_tauri",
    "beforeDevCommand": "npm run start",
    "devPath": "http://localhost:3000/bluescribe/",
    "distDir": "../build"
  },
  "package": {
    "productName": "bluescribe",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": ["../public/logo192.png", "../public/logo512.png", "../public/favicon.ico"],
      "identifier": "blue.winds.bluescribe",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "BlueScribe",
        "width": 800
      }
    ]
  },
  "plugins": {
    "fs": {
      "scope": ["$APPCONFIG", "$APPCONFIG/systems", "$APPCONFIG/systems/**"]
    }
  }
}
